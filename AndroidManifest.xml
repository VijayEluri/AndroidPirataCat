<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="cat.pirata.activities"
	android:versionCode="3"
	android:versionName="1.0.2">
	<application
		android:icon="@drawable/icon48"
		android:label="@string/app_name"
		android:debuggable="false"
		android:theme="@android:style/Theme.NoTitleBar" >
		
		<activity android:name=".PartitPirata" android:label="@string/app_name" android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name=".InfoActivity" android:label="@string/app_name" />
		<activity android:name=".IdeatorrentActivity" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".CalendariActivity" android:label="@string/app_name" android:screenOrientation="portrait" />

		<activity android:name=".IdeaWaiting" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".IdeaVoting" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".IdeaDeveloping" android:label="@string/app_name" android:screenOrientation="portrait" />
		<activity android:name=".IdeaDone" android:label="@string/app_name" android:screenOrientation="portrait" />


    	<receiver android:name="cat.pirata.widget.WidgetProvider" >
    		<intent-filter>
    			<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    		</intent-filter>
    		<meta-data android:name="android.appwidget.provider" android:resource="@xml/widgetproviderinfo" />
    	</receiver>
	</application>
	
	<uses-sdk android:minSdkVersion="1" />
	<uses-permission android:name = "android.permission.INTERNET" />
</manifest>
